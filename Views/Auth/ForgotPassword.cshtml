<section class="px-8 bg-white">
    <div class="container mx-auto h-screen grid place-items-center">
        <div class="relative flex flex-col bg-clip-border rounded-xl bg-white text-neutral-950 md:px-20 md:py-14 py-8 border border-gray-300">
            <div class="relative bg-clip-border mt-4 mx-4 rounded-xl overflow-hidden bg-white text-neutral-950 text-center">
                <h1 class="font-sans text-5xl font-semibold text-blue-gray-900 mb-4 !text-3xl md:text-4xl">
                    Forgot Password?
                </h1>
                <p class="block antialiased font-sans text-base font-light leading-relaxed text-inherit !text-gray-600 text-[18px] font-normal md:max-w-sm">
                    No worries, we'll send you reset instruction
                </p>
            </div>
            <div class="pt-6 px-2">
                <form class="flex flex-col gap-4 md:mt-6" x-data="forgotPasswordForm" x-on:submit.prevent="submitResetPassword">
                    @Html.AntiForgeryToken()
                    <div class="relative">
                        <div class="mb-3">
                            <p class="font-sans text-sm font-medium mb-2">
                                Your Email
                            </p>
                            <input placeholder="name@mail.com" class="input input-bordered w-full bg-white" x-model="emailInput" :class="isValid ? '' : 'input-error' " />
                            <div class="label justify-end">
                                <p class="label-text-alt text-sm text-error" x-text="errorMessage"></p>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary text-white uppercase font-bold" type="submit" :class="loading ? 'btn-disabled' : '' ">
                        <span :class="loading ? 'loading loading-spinner' : '' "></span>
                        <span x-text="loading ? 'Loading' : 'Reset password' "></span>
                    </button>
                    <button class="btn" id="backloginBtn" onclick="history.back()" type="button">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                        </svg>
                        Back to login
                    </button>
                </form>
            </div>
        </div>
    </div>

    <dialog id="forgotPassConfirm" class="modal modal-bottom sm:modal-middle">
        <div class="modal-box bg-white pt-8 px-8 pb-6 max-w-lg">
            <h2 class="text-2xl font-semibold mb-6 text-neutral">Check your email</h2>

            <div class="space-y-4 mb-6">
                <p class="text-lg text-neutral" id="forgotPassMessage"></p>

                <!-- Temporary reset link section -->
                <div class="bg-base-200 p-4 rounded-lg">
                    <p class="text-sm text-neutral mb-2">Temporary reset link (for testing):</p>
                    <a class="link link-primary text-sm break-all" id="resePasswordLink">temporary reset link</a>
                </div>
            </div>

            <div class="modal-action mt-6 justify-end">
                <form method="dialog">
                    <button class="btn btn-primary" onclick="window.location.href='@Url.ActionLink("Login", "Auth")'">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                        </svg>
                        Back to login
                    </button>
                </form>
            </div>
        </div>
    </dialog>

</section>