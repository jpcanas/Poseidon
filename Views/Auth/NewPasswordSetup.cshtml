<div class="flex min-h-screen items-center justify-center bg-base-200">
    <div class="card w-full max-w-4xl bg-base-100 shadow-xl text-neutral">
        <div class="card-body p-12">
            <h2 class="card-title text-2xl mb-6 font-semibold">Set new password</h2>
            @Html.AntiForgeryToken()
            <input type="hidden" value="@ViewBag.UserGuid" id="userGuid" />
            <input type="hidden" value="@ViewBag.ResetToken" id="resetToken" />
            <div class="grid md:grid-cols-2 gap-8" x-data="passwordComponent">
                <!-- Right Column - Requirements -->
                <div class="flex flex-col justify-between h-full">
                    <div class="space-y-3">
                        <h3 class="font-medium mb-4">Requirements</h3>
                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                                 :class="hasMinLength ? 'border-success bg-success' : 'border-base-300'">
                                <svg x-show="hasMinLength"
                                     class="w-3 h-3 text-white"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-base-content/70">At least 8 characters</span>
                        </div>

                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                                 :class="hasNumber  ? 'border-success bg-success' : 'border-base-300'">
                                <svg x-show="hasNumber"
                                     class="w-3 h-3 text-white"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-base-content/70">Contains numbers</span>
                        </div>

                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                                 :class="hasSpecialChar  ? 'border-success bg-success' : 'border-base-300'">
                                <svg x-show="hasSpecialChar"
                                     class="w-3 h-3 text-white"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-base-content/70">Contains special characters</span>
                        </div>

                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                                 :class="hasUpperAndLower  ? 'border-success bg-success' : 'border-base-300'">
                                <svg x-show="hasUpperAndLower"
                                     class="w-3 h-3 text-white"
                                     fill="none"
                                     stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <span class="text-base-content/70">Contains uppercase and lowercase</span>
                        </div>
                    </div>
                    <div class="card mt-auto" x-show="submitError != ''" x-cloak>
                        <div class="card-body bg-red-400 p-3 rounded-md">
                            <div class="flex gap-2 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                                </svg>
                                <span class="text-white" x-text="submitError"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">New Password</span>
                        </label>
                        <label class="input input-bordered w-full bg-white flex items-center justify-between"
                               x-data="{showPassword: false}">
                            <input :type="showPassword ? 'text' : 'password'"
                                   x-model="password" />
                            <button type="button" class="text-neutral cursor-pointer" x-on:click="showPassword = !showPassword">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                     class="size-6" x-show="!showPassword">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                     class="size-6" x-show="showPassword">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                                </svg>
                            </button>
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-medium">Confirm Password</span>
                        </label>
                        <label class="input input-bordered w-full bg-white flex items-center justify-between"
                               x-data="{showConfirmPassword: false}">
                            <input :type="showConfirmPassword ? 'text' : 'password'"
                                   x-model="confirmPassword"
                                   :class="{ 'input-error border-error': confirmPassword.length > 0 && !passwordsMatch }" />
                            <button type="button" class="text-neutral cursor-pointer" x-on:click="showConfirmPassword = !showConfirmPassword">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                     class="size-6" x-show="!showConfirmPassword">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                     class="size-6" x-show="showConfirmPassword">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                                </svg>
                            </button>
                        </label>
                        <label class="label" x-show="confirmPassword.length > 0 && !passwordsMatch">
                            <span class="label-text-alt text-error" x-text="notMatchError"></span>
                        </label>
                    </div>

                    <div class="flex justify-end">
                        <button class="btn btn-primary text-white px-8"
                                x-on:click="handleSubmit"
                                :class="loading ? 'btn-disabled' : '' ">
                            <span :class="loading ? 'loading loading-spinner' : '' "></span>
                            <span x-text="loading ? 'loading' : 'Submit' "></span>
                        </button>
                    </div>

                </div>

                <dialog class="modal" id="passwordChangeModal">
                    <div class="modal-box text-center">
                        <!-- Success Icon -->
                        <div class="flex justify-center mb-4">
                            <div class="w-16 h-16 rounded-full bg-success flex items-center justify-center">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                        </div>

                        <h3 class="text-2xl font-bold mb-2">Password Changed Successfully!</h3>
                        <p class="text-base-content/70 mb-6">Your password has been updated.</p>

                        <p class="text-sm text-base-content/60 mb-4">
                            Redirecting to login page in <span class="font-bold text-primary" x-text="redirectCountdown"></span> seconds...
                        </p>

                        <div class="modal-action justify-center">
                            <button class="btn btn-primary text-white px-8" x-on:click="redirectToLogin">
                                Go to Login Now
                            </button>
                        </div>
                    </div>
                </dialog>

            </div>
        </div>
    </div> 

</div>

@section Scripts {
    <script src="~/Scripts/Shared/password-component.js" asp-append-version="true"></script>
}